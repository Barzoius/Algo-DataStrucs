#include <iostream>

int main()
{
  int k;
    std::cin>>k;
    int size =(k*(k+1))/2;
    int v[size];
    int index = 0;

    for(int i = 1; i <= k; i++)
    {
        for(int j = i; j >= 1; j--)
        {
            v[index] = j;
            index++;
        }
    }

    int x;
    std::cin>>x;
    std::cout<<v[x];
    
    return 0;
}
